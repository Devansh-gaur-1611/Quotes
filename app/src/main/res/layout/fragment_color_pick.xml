<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bottom_sheet_background"
	tools:context=".fragment.ColorPickFragment"
	>

	<TextView
		android:id="@+id/colorPickTitleTV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="8dp"
		android:letterSpacing="0.15"
		android:padding="8dp"
		android:text="@string/pick_card_color"
		android:textColor="@color/accentTextColor"
		app:layout_constraintBottom_toTopOf="@id/colorPickRecyclerView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		/>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/colorPickRecyclerView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:padding="4dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/colorPickTitleTV" />

</androidx.constraintlayout.widget.ConstraintLayout>