<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/shareRelativeLayout"
	android:layout_width="1080px"
	android:layout_height="1920px"
	android:gravity="center"
	tools:ignore="PxUsage,SpUsage">

	<androidx.cardview.widget.CardView
		android:id="@+id/shareCardView"
		android:layout_width="920px"
		android:layout_height="wrap_content"
		android:layout_margin="36dp"
		app:cardBackgroundColor="@color/defaultCardBackgroundColor"
		app:cardCornerRadius="8dp"
		app:cardElevation="12dp">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:minHeight="220dp"
			android:padding="4dp">

			<TextView
				android:id="@+id/shareQuoteTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="serif"
				android:lineSpacingExtra="2sp"
				android:maxWidth="900px"
				android:padding="4dp"
				android:textColor="#FFFFFF"
				android:textSize="32dp"
				app:layout_constraintBottom_toTopOf="@id/shareAuthorTextView"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<TextView
				android:id="@+id/shareAuthorTextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:fontFamily="cursive"
				android:padding="4dp"
				android:textColor="#FFFFFF"
				android:textSize="24dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent" />

		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</RelativeLayout>